<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:minHeight="96dp"
    android:maxHeight="96dp"
    android:weightSum="15"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_weight="5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/newsItem_photo"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:weightSum="25"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:textSize="20sp"
            android:singleLine="true"
            android:id="@+id/newsItem_title"

            android:textColor="@color/text_yellow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/newsItem_desc"
            android:textColor="@color/text_grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="20"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:background="@drawable/news_item_time"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_marginTop="-4dp"
                android:id="@+id/newsItem_date"
                android:textSize="12sp"
                android:textColor="@color/text_grey"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:id="@+id/news_item_img_location"
                android:background="@drawable/news_item_location"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_marginTop="-4dp"
                android:id="@+id/newsItem_location"
                android:textSize="12sp"
                android:textColor="@color/text_grey"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="20"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:background="@drawable/news_item_vote"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_marginTop="-4dp"
                android:id="@+id/newsItem_vote"
                android:textSize="12sp"
                android:textColor="@color/text_grey"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="1"
                android:background="@drawable/news_item_pageview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_marginTop="-4dp"
                android:id="@+id/newsItem_view"
                android:textSize="12sp"
                android:textColor="@color/text_grey"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>